     class bankModel extends DefaultComboBoxModel{


          @Override
        public int getSize()
        {

            //Accounts for the fact that
            //the model's list could be null
            if(blist == null)
                return 0;
            return ((ArrayList)blist).size();
        }

        @Override
        public Object getElementAt(int index)
        {
			//Note that a String is returned
            String goBack = new String(blist.get(index).getAcctHolder());
            return goBack;
        }
    }
  
   
    
